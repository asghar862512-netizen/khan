/* 1. Global Reset & Typography */
body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    line-height: 1.6; /* Makes text easier to read */
    color: #333;      /* Dark grey text is easier on eyes than pure black */
    background-color: #f4f4f9; /* Very light grey background */
    margin: 0;
    padding: 0;
}

/* 2. The Layout Container - Centers everything */
.container {
    max-width: 800px; /* Prevents text from stretching too wide */
    margin: 0 auto;   /* Automatically centers the box */
    padding: 2rem;    /* Adds space inside the box */
    background: white;
    min-height: 100vh; /* Ensures it fills the screen height */
    box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Subtle shadow for depth */
}

/* 3. Headings */
h1, h2, h3 {
    color: #2c3e50;
    margin-top: 1.5rem;
}

h1 {
    font-size: 2.5rem;
    border-bottom: 2px solid #eee; /* Adds a line under the main title */
    padding-bottom: 10px;
}

/* 4. Links */
a {
    color: #3498db;
    text-decoration: none;
    font-weight: bold;
}

a:hover {
    text-decoration: underline; /* underline appears when mouse hovers */
}

/* 5. Images */
img {
    max-width: 100%; /* Ensures images don't overflow on mobile */
    height: auto;
    border-radius: 8px; /* Slightly rounded corners */
}

/* 6. Button Style */
.btn {
    display: inline-block;
    background: #3498db;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    margin-top: 10px;
}

.btn:hover {
    background: #2980b9;
    text-decoration: none;
}
